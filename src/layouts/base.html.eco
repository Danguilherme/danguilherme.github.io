<html>
<head>
  <meta charset="UTF-8">

  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="theme-color" content="#2196F3">

  <link rel="alternate" type="application/rss+xml" title="{{ site.title }} - RSS" href="/atom.xml" />

  <title><%= @getPreparedTitle() %></title>
  <%- @getBlock("meta").toHTML() %>
  <%- @getBlock("styles").add(["/styles/style.css", "/styles/highlight.js/zenburn.css", "http://fonts.googleapis.com/css?family=Source+Code+Pro:400|Marvel:400,700|Raleway:700,400"]).toHTML() %>
</head>
<body>
  <header id="main-header">
    <div id="header-content">
      <h1><a href="/">Guilherme Ventura</a></h1>

      <nav>
        <ul id="links">
          <% for page in @getCollection("pages").toJSON(): %>
            <li class="<%= if page.id is @document.id then 'active' else 'inactive' %>">
              <a href="<%= page.url %>">
                <%= page.title %>
              </a>
            </li>
          <% end %>
        </ul>
      </nav>
    </div>
  </header>

  <main>
    <%- @content %>
  </main>

  <%- @getBlock("scripts").toHTML() %>
</body>
</html>
