@import 'variables.css.styl'
@import 'mixins.css.styl'
@import 'home.css.styl'

/*
* BASE
*/
* {
  box-sizing border-box
}

html
  font-family Raleway, sans-serif
  font-size 16px
  line-height 1.5
  height 100%
  > object
    display none

body
  margin 0
  padding 0
  height 100%
  background-image url('../images/square_bg.png')
  background-attachment fixed

input,
textarea,
keygen,
select,
button
  font-size 1em
  font-size 1rem

h1,
h2,
h3,
h4,
h5,
h6
  margin-top 1em
  margin-bottom 0
  font-family Marvel, sans-serif
  line-height 1

h1
  font-size 2.5rem

h2
  font-size 2rem

h3
  font-size 1.7rem

h4
  font-size 1.5rem

h5
  font-size 1.3rem

h6
  font-size 1.1rem

a
  color darken(theme-color, 30%)
  text-decoration underline
  transition color .2s

  .icon
    transition fill .2s
    fill darken(theme-color, 30%)

  &:visited
    color darken(theme-color, 50%)

  &:hover,
  &:focus
    color theme-color
    .icon
      fill theme-color

blockquote
  border-left theme-color 5px solid
  margin-left 0
  margin-right 0
  color #333
  padding .5rem .5rem .5rem 2em
  background-color lighten(theme-color, 95%)
  border-radius 3px
  font-style italic

blockquote cite
  display block
  cursor default

blockquote cite::before
  display inline
  content 'â€” '

abbr
  cursor help
  border-bottom dotted 1px #ddd
  transition border-color .2s

abbr:hover
  border-bottom-color #777

.highlight textarea,
code
  font-family "Source Code Pro", monospace
  line-height 1.5

  max-height 20em
  overflow-y auto

code
  padding 0 3px
  background-color #f9f9f9
  border 1px solid #eaeaea
  border-radius 3px
  &.hljs
    white-space pre-wrap

table
  margin 0
  margin-bottom 1rem
  width 100%
  max-width 100%
  border 1px solid rgba(187, 222, 251, .2)
  border-collapse collapse

tbody tr:nth-child(odd) td,
tbody tr:nth-child(odd) th
  background-color rgba(227, 242, 253, .2)

td,
th
  padding .5rem .5rem
  border 1px solid rgba(187, 222, 251, .2)

th
  cursor default
  text-align center

img
  display block
  margin 0 0 1rem
  max-width 100%
  border-radius 3px
  text-align center

dl dt
  font-weight bold

.icon {
  display: inline-block;
  width: 1em;
  height: 1em;
  fill: currentColor;
  vertical-align middle
}

.header-content,
.footer-content
  max-width max-width
  padding 0 1em
  margin 0 auto

/*
* HEADER
*/
.site-header
  background #2196F3
  color white
  min-height 60px

  h1
    display inline-block
    margin 0
    padding-right 20px
    border-radius 50px
    border-right 5px solid #1E90EC
    line-height 1.5
  a
    color inherit
    text-decoration none

  nav
    display inline-block
    height 60px
    vertical-align top

    ul
      display inline-block
      padding 0
      margin 0
      center-vertical()
      cursor default
    li
      display inline-block
      padding 0
      margin-right 10px

  .header-external-links
    float right

    li
      opacity 0.5
      transition opacity .2s linear
      &:hover
        opacity 1

.site-header::after
  content ''
  display block
  clear both

#sobre img
  float left
  margin-right 15px
  margin-bottom 15px

/*
* BODY
*/
main
  header,
  h1,
  h2,
  h3,
  h4,
  h5,
  h6,
  p,
  ul,
  ol,
  dl,
  table,
  div
    max-width max-width
    margin-left 5px
    margin-right 5px
    @media screen and (min-width: max-width)
      margin-left auto
      margin-right auto

  #blog-post header
    margin-bottom 3rem

    position relative

    cursor default
    text-align center

    .post-title,
    .post-tagline,
    .post-tags
      margin 0
      margin-right auto
      margin-left auto
      width 80%

    .post-cover
      width 100%
      margin 1em auto 0
      z-index -1

      img
        margin 0 auto
        padding 0

    .post-title
      font-size 3em
      font-size 3rem
      line-height 1

    .post-tagline
      font-size 1.7rem
      /* color #2196F3; */
      text-transform uppercase
      margin-bottom 1rem
      line-height 1

      color #90CAF9
      font-weight 200

    time
      position absolute
      top 1rem
      left 0

      display inline-block
      margin-right 10px
      width 50px

      float left

      background-color #fff
      border 1px solid #606060
      cursor default

      @media screen and (min-width: max-width + (70px * 2))
        left -60px

      span
        display block
        padding 0 5px
        text-align center

      .year
        background theme-color
      .month
        background lighten(theme-color, 50%)
      .day
        box-shadow inset #606060 0 0 3px
        text-align center

  @media screen and (min-width: max-width + 50px)
    ul,
    ol
      padding-left 0

      ul,
      ol
        padding-left 1.5em

  pre.highlight
    max-width 100%
    background #3F3F3F

    textarea
      width 100%
      display block
      padding: 0.5em;

      white-space pre-wrap                 /* CSS3 browsers  */
      white-space -moz-pre-wrap !important /* 1999+ Mozilla  */
      white-space -pre-wrap                /* Opera 4 thru 6 */
      white-space -o-pre-wrap              /* Opera 7 and up */

      word-wrap break-word                 /* IE 5.5+ and up */

      color #fff
      border none
      background-color transparent
      outline none
      border-radius 0
      resize none

    code.hljs
      max-width max-width
      margin 0 auto
      white-space pre-wrap
      border none
      &.copying-code
        display none

    .xml .javascript
      opacity 1

  #posts-list
    padding 0
    cursor default
    li
      display inline-block
      margin-bottom 1em
      vertical-align top

      width 100%
      &:nth-child(1)
        font-size 1.2em

      @media screen and (min-width: mobile-breakpoint)
        width 45%
        &:nth-child(even)
          margin-left 2.5%
        &:nth-child(odd)
          margin-right 2.5%
        &:nth-child(2)
          font-size 1.2em

      time,
      a,
      span
        display block

      img
        text-align center
        margin 0 auto
        height 100px

      time
        font-size .8em
        color #aaa
      a
        font-weight bold
        text-decoration none
      span
        font-style italic

.site-footer
  padding 0 1rem
  margin-top 3rem

  font-size .8rem
  line-height 2
  text-align center

  border-top 1px solid alpha(theme-color, .1)

  .love
    color #D70021

